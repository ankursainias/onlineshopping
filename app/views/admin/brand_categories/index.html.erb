<h1>Listing brand_categories</h1>

<table>
  <thead>
    <tr>
      <th>Brand</th>
      <th>Category</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @brand_categories.each do |brand_category| %>
      <tr>
        <td><%= brand_category.brand %></td>
        <td><%= brand_category.category %></td>
        <td><%= link_to 'Show', [:admin, brand_category] %></td>
        <td><%= link_to 'Edit', edit_admin_brand_category_path(brand_category) %></td>
        <td><%= link_to 'Destroy', [:admin, brand_category], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

