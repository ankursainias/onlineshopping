<div style="float: right;">
<%= link_to 'New Store', new_admin_store_path, class: 'btn btn-primary' %>
</div>
<div class="page-header">
  <h1>Listing stores</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Postal code</th>
      <th>City</th>
      <th>Phone</th>
      <!-- <th></th> -->
    </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= store.name %></td>
        <td><%= store.address %></td>
        <td><%= store.postal_code %></td>
        <td><%= store.city %></td>
        <td><%= store.phone.present? ? store.phone : "Not Available" %></td>
        <td><%= link_to 'Items', admin_store_items_path(store), class: 'btn btn-default btn-xs' %></td>
        <!-- <td><%#= link_to 'Show', [:admin, store], class: 'btn btn-default btn-xs' %></td> -->
        <!-- <td><%#= link_to 'Edit', edit_admin_store_path(store), class: 'btn btn-default btn-xs' %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

