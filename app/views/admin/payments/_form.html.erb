<%= form_for([:admin, @payment], html: { class: 'form-horizontal payment' }) do |f| %>
  <% if @payment.errors.any? %>
    <div id="error_explanation" class="panel panel-danger">
      <div class="panel-heading">
        <h2 class="panel-title"><%= pluralize(@payment.errors.count, "error") %> prohibited this payment from being saved:</h2>
      </div>
      <div class="panel-body">
        <ul>
        <% @payment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :order_id, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :order_id, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :transaction_id, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :transaction_id, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :pay_time, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :pay_time, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :card_id, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :card_id, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :failure_message, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :failure_message, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :failure_code, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :failure_code, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :gateway_status, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :gateway_status, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <%= f.label :captrued, for: nil do %>
        <%= f.check_box :captrued %>
        <%= Payment.human_attribute_name(:captrued) %>
      <% end %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :pay_type, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :pay_type, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <%= f.submit nil, class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
