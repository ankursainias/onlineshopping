
<style type="text/css">
  h4{
    text-align: center;
    padding-top: 15px;
    padding-bottom: 15px;
}

.amount{
display: inline;
}

#pay_via_cash{
  margin-top: 10px;
}

.form-control, .btn{
    border-radius: 0;
}
.standard-button{
  background-color: #eebe25;
  color: rgba(0, 0, 0, 0.5);
  text-transform: uppercase;
  padding-top: 10px;
  padding-bottom: 12px;
  padding-left: 35px;
  padding-right: 35px;
  border-radius: 0;
  border:none;
  margin-bottom: 20px;
  width: 100%;
  font-weight: 600;
}


.btn-anim{
  -webkit-transition: all 0.3s;
  -moz-transition: all 0.3s;
  transition: all 0.3s;
}


.btn-anim:after {
  content: '';
  position: absolute;
  z-index: -1;
  -webkit-transition: all 0.3s;
  -moz-transition: all 0.3s;
  transition: all 0.3s;
}
.color_css{
  color: red;
  font-size: small;
}

</style>
<div class="modal fade" id="client-pay-modal" tabindex="-1" role="dialog" aria-labelledby="call-modal" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
          <h4 class="modal-title my-modal-label">Please enter your payment information below</h4>
        </div>
        <div class="modal-body">
          <div class="container">
            <div class='row'>
              <!--   <div class="col-md-12"><h4 class="modal-title my-modal-label">Please enter your payment information below</h4></div> -->
                  <div class='col-md-10 col-xs-2'></div>
                  <div class='col-md-6 col-xs-8'>
                    <script src='https://js.stripe.com/v2/' type='text/javascript'></script>
                    <form accept-charset="UTF-8" action="/" class="require-validation" data-cc-on-file="false" data-stripe-publishable-key="pk_bQQaTxnaZlzv4FnnuZ28LFHccVSaj" id="payment-form" method="post"><div style="margin:0;padding:0;display:inline"><input name="utf8" type="hidden" value="✓" /><input name="_method" type="hidden" value="PUT" /><input name="authenticity_token" type="hidden" value="qLZ9cScer7ZxqulsUWazw4x3cSEzv899SP/7ThPCOV8=" /></div>
                      <div class='form-row'>
                        <div class='col-xs-12 form-group required'>
                          <label class='control-label'>Name on Card</label>
                          <input class='form-control' id="card_holder" size='4' type='text' maxlength="50">
                          <label id="card_holder_error" class="color_css"></label>
                        </div>
                      </div>
                      <div class='form-row'>
                        <div class='col-xs-12 form-group card required'>
                          <label class='control-label'>Card Number</label>
                          <input autocomplete='off' class='form-control card-number' size='20' type='text' minlength="16" id="card_number" maxlength="16">
                          <label id="card_number_error" class="color_css"></label>
                        </div>
                      </div>
                      <div class='form-row'>
                        <div class='col-xs-4 form-group cvc required'>
                          <label class='control-label'>CVC</label>
                          <input autocomplete='off' class='form-control card-cvc' placeholder='ex. 311' size='4' type='text' id="card_cvc" maxlength="4" minlength="3">
                           <label id="card_cvc_error" class="color_css"></label>
                        </div>
                        <div class='col-xs-4 form-group expiration required'>
                          <label class='control-label'>Expiration</label>
                          <input class='form-control card-expiry-month' minlength="1" maxlength="2" placeholder='MM' size='2' type='text' id="card_month">
                          <label id="card_month_error" class="color_css"></label>
                        </div>
                        <div class='col-xs-4 form-group expiration required'>
                          <label class='control-label'> </label>
                          <input class='form-control card-expiry-year' minlength="4" maxlength="4" placeholder='YYYY' size='4' type='text' id="card_year">
                          <label id="card_year_error" class="color_css"></label>
                        </div>
                      </div>
                      <div class='form-row'>
                        <div class='col-md-12'>
                          <div class='form-control total btn btn-info standard-button'>
                            Total pay:
                            <span class='amount' >&#x20b9;<%= session[:grand_total].to_i %></span>
                          </div>
                        </div>
                      </div>
                      <div class='form-row'>
                        <div class='col-md-12 form-group'>
                          <button class='form-control btn btn-primary submit-button standard-button place_order' type='button' id="pay_via_card" status="Card">PAY NOW</button>
                          <button class='form-control btn btn-primary submit-button standard-button place_order' type='button' id="pay_via_cash" status="COD" >Cash On Delivery</button>
                          <!-- <button class='form-control btn btn-primary submit-button standard-button place_order' type='button' id="pay_via_paypal" status="paypal" >Pay with Paypal</button> -->
                           <!-- <div id="paypal-button-container" style="text-align: center;"></div> -->
                           <%#= link_to image_tag("https://www.paypal.com/en_US/i/btn/btn_xpressCheckout.gif"), root_url %>
                           <%= link_to image_tag("https://www.paypal.com/en_US/i/btn/btn_xpressCheckout.gif"), Cart.find(session[:cart_id]).paypal_url(root_url,paypal_notify_home_index_path,checkout_home_index_path) %>
                        </div>
                      </div>
                      <div class='form-row'>
                        <div class='col-md-12 error form-group hide'>
                          <div class='alert-danger alert'>
                            Please correct the errors and try again.
                          </div>
                        </div>
                      </div>
                    </form>
                  </div>
                  <div class='col-md-4 col-xs-2'></div>
            </div>
          </div>
        </div> <!--end modal-body-->
      </div>
    </div>
  </div> 
