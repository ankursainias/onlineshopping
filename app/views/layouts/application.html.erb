<!DOCTYPE html>
<html>
  <head>
    <title>OnlineShopping</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- <script src="https://www.paypalobjects.com/api/checkout.js"></script> -->
  </head>

  <body>
      <% if user_signed_in? %>
      <%= render 'layouts/partials/header' if current_user.admin?%>
       <%= link_to('Logout', destroy_user_session_path, method: :delete) unless  current_user.admin? %>  
      <%else%>
      <%= link_to('Login', new_user_session_path)  %>  
      <%end%>
      <%= render 'layouts/partials/notice_and_alerts'%>
      <div class="fluid-container col-md-12" >
        <% unless params[:controller] == "home"%>
          <a href="/" class="btn btn-primary">Home</a>
       <%end%>
    <%= yield %>
    </div>
  </body>
</html>
