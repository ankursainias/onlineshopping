<h1>Listing prices</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>P type</th>
      <th>Active</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @prices.each do |price| %>
      <tr>
        <td><%= price.title %></td>
        <td><%= price.p_type %></td>
        <td><%= price.active %></td>
        <td><%= link_to 'Show', [:admin, price] %></td>
        <td><%= link_to 'Edit', edit_admin_price_path(price) %></td>
        <td><%= link_to 'Destroy', [:admin, price], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

