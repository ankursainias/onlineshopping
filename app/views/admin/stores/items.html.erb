<h1>Listing items</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>SR No.</th>
      <th>Category Name</th>
      <th>Name</th>
      <th>Out of Stock</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @store_items.each_with_index do |item,index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= item.category.name %></td>
        <td><%= item.name %></td>
        <td><%= item.store_items.first.out_of_stock ? "Yes" : "No" %></td>
        <td>
        	<%if item.store_items.first.out_of_stock %>
       		 	<%=link_to 'Mark As In Of Stock', admin_item_stock_path(item.store_items.first) %>
       		 <%else%>
        	<%=link_to 'Mark As Out Of Stock', admin_item_stock_path(item.store_items.first) %>
        	<%end%>
        	</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
