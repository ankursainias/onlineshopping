<%= form_for([:admin, @order], html: { class: 'form-horizontal order' }) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation" class="panel panel-danger">
      <div class="panel-heading">
        <h2 class="panel-title"><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>
      </div>
      <div class="panel-body">
        <ul>
        <% @order.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :user_id, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :user_id, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :order_status_id, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :order_status_id, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :expected_delivery_at, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :expected_delivery_at, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cancelled_at, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :cancelled_at, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cart_id, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :cart_id, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :delivery_fee, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :delivery_fee, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :sub_total, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :sub_total, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :discount_total, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :discount_total, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :grand_total, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :grand_total, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <%= f.submit nil, class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
