<h1>Listing items</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Veg</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.veg  ? 'Yes' : 'No'  %></td>
        <td><%= link_to 'Show', [:admin, item] %>
        <%= link_to 'Edit', edit_admin_item_path(item) %>
        <%= link_to 'Destroy', [:admin, item], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_admin_item_path %>
